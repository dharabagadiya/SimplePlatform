@model Security.Models.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <!-- Mobile specific metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1 user-scalable=no">
    <!-- Force IE9 to render in normal mode -->
    <!--[if IE]><meta http-equiv="x-ua-compatible" content="IE=9" /><![endif]-->
    <link href="~/Content/plugins/awesome-font/css/awesome-font.css" rel="stylesheet" />
    <link href="~/Content/plugins/animate.css" rel="stylesheet" />
    <link href="~/Content/plugins/bootstrap/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/plugins/main.css" rel="stylesheet" />
    <link href="~/Content/Login/custom.css" rel="stylesheet" />
    <script src="~/Scripts/Plugins/modernizr-2.6.2.js"></script>
</head>
<body class="login-page">
    <div class="container login-container">
        <div class="login-panel panel panel-default plain animated bounceInLeft">
            <!-- Start .panel -->
            <div class="panel-heading">
                <h4 class="panel-title text-center">
                    Welcom To Portal
                </h4>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="col-lg-12">
                                <div class="input-group input-icon">
                                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                    @Html.TextBoxFor(model => model.Username, htmlAttributes: new { placeholder = "Your email ...", id = "email", name = "email", value = "", @class = "form-control" })
                                </div>
                                @Html.ValidationMessageFor(model => model.Username, null, new { @class = "help-block" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-12">
                                <div class="input-group input-icon">
                                    <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                    @Html.PasswordFor(model => model.Password, htmlAttributes: new { placeholder = "Your password", id = "password", name = "password", value = "", @class = "form-control" })
                                </div>
                                @Html.ValidationMessageFor(model => model.Password, null, new { @class = "help-block" })
                                <span class="help-block text-right"><a href="#">Forgot password ?</a></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-8">
                                <div class="checkbox-custom">
                                    <input type="checkbox" name="remember" id="remember" value="option">
                                    <label for="remember">Remember me ?</label>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-4 mb25">
                                <button class="btn btn-default pull-right" type="submit">Login</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <script src="~/Scripts/Plugins/jquery-1.11.3.min.js"></script>
    <script src="~/Scripts/Plugins/bootstrap.min.js"></script>
    <script src="~/Scripts/Plugins/jQuery-Validator/jquery.validate.min.js"></script>
    <script src="~/Scripts/Plugins/jQuery-Validator/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/Plugins/jQuery-Validator/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/Login/login.js"></script>
    <script src="~/Scripts/Plugins/highstock.js"></script>
</body>
</html>
