<form method="post">
    <div class="modal-dialog divUserModalDialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Update Audience Status</h4>
            </div>
            <div class="modal-body">
                <div class="form-group" id="divArrivalDate">
                    <div class="col-sm-12">
                        <label for="VisitDate">Arrival Date</label>
                        <input type="text" name="VisitDate" class="form-control txtArrivalDate" readonly="readonly" placeholder="Select Date" value="@DateTime.Now.ToString("MM/dd/yyyy")" />
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="btnUpdateStatus">Mark As Arrived</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</form>

