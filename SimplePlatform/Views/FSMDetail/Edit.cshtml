@model DataModel.Modal.FSMDetail

<form method="post">
    <input type="hidden" id="hdnFSMUserDetail" value="@Model.ID" />
    <div class="modal-dialog divUserModalDialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Update FSM User Detail</h4>
            </div>
            <div class="modal-body">
                <p class="bg-danger" id="divCommonMessage">User Email ID already used.</p>
                <div class="form-group">
                    <label for="txtUserName">First Name</label>
                    <input type="text" name="txtUserName" class="form-control" id="txtUserName" placeholder="Name" value="@Model.Name" />
                </div>
                <div class="form-group">
                    <label for="emailAddress">Email Address</label>
                    <input type="email" class="form-control" name="emailAddress" id="txtUserEmailAddress" placeholder="Email Address" value="@Model.EmailID" />
                </div>
                <div class="form-group">
                    <label for="phoneNumber">Phone Number</label>
                    <input type="text" name="txtPhoneNumber" class="form-control" id="txtPhoneNumber" placeholder="Phone Number" value="@Model.PhoneNumber" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="btnAddUser">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</form>
