@model DataModel.Modal.Event
@{ var offices = (List<DataModel.Modal.Office>)ViewData["Offices"]; }
@{ var conventions = (List<DataModel.Modal.Convention>)ViewData["Conventions"]; }

<form action="#" type="post">
    <input type="hidden" id="hdnEventID" value="@Model.EventId" />
    <input type="hidden" id="hdnOfficeID" value="@Model.Office.OfficeId" />
    <input type="hidden" id="hdnConventionID" value="@Model.convention.ConventionId" />
    <div class="modal-dialog divUserModalDialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Edit Event</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" class="form-control" id="txtName" placeholder="Name" name="name" value="@Model.Name" />
                </div>
                <div class="form-group">
                    <div class="col-sm-6">
                        <label for="FirstName">Start Date</label>
                        <div class="input-group input-icon input-daterange" id="datepickerStart">
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            <input type="text" class="form-control" id="txtDueDateStart" name="txtDueDateStart" readonly="readonly" value="@Model.StartDate.ToString("MM/dd/yyyy")">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <label for="FirstName">Time</label>
                        <div class="input-group bootstrap-timepicker">
                            <span class="input-group-addon"><i class="fa fa-clock-o"></i></span>
                            <input id="timepickerStart" type="text" class="form-control" readonly="readonly" value="@Model.StartDate.ToString("HH:mm")">
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="form-group">
                    <div class="col-sm-6">
                        <label for="FirstName">End Date</label>
                        <div class="input-group input-icon input-daterange" id="datepickerEnd">
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            <input type="text" class="form-control" id="txtDueDateEnd" name="txtDueDateEnd" readonly="readonly" value="@Model.EndDate.ToString("MM/dd/yyyy")">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <label for="FirstName">Time</label>
                        <div class="input-group bootstrap-timepicker">
                            <span class="input-group-addon"><i class="fa fa-clock-o"></i></span>
                            <input id="timepickerEnd" type="text" class="form-control" readonly="readonly" value="@Model.EndDate.ToString("HH:mm")">
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="form-group">
                    <label for="Name">City</label>
                    <input type="text" class="form-control" id="txtCity" placeholder="City" name="city" value="@Model.City" />
                </div>
                <div class="form-group">
                    <label for="txtDescription">Description</label>
                    <textarea class="form-control" rows="5" name="txtDescription" id="txtDescription">@Model.Description</textarea>
                </div>
                <div class="form-group">
                    <label for="SelectOffice">Select Office</label>
                    <select class="form-control" id="dwnOffices">
                        @foreach (var office in offices)
                        {
                            <option value="@office.OfficeId">@office.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="SelectOffice">Select Convention</label>
                    <select class="form-control" id="dwnConvention">
                        @foreach (var convention in conventions)
                        {
                            <option value="@convention.ConventionId">@convention.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="btnEditEvent">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</form>


