@{ var offices = (List<DataModel.Modal.Office>)ViewData["Offices"]; }
@model DataModel.Modal.Target

<form action="#" type="post">
    <input type="hidden" id="hdnTargetID" value="@Model.TargetId" />
    <input type="hidden" id="hdnOfficesID" value="@Model.Office.OfficeId" />
    <div class="modal-dialog divUserModalDialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Edit Office Target</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <div class="col-sm-12">
                        <label for="SelectUserRole">Select Office</label>
                        <select class="form-control dwnOffices" id="dwnOffices">
                            <option value="0">Select Office</option>
                            @foreach (var office in offices)
                            {
                                <option value="@office.OfficeId">@office.Name</option>
                            }
                        </select>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <label for="txtDueDate">Due Date</label>
                        <div class="input-group input-icon" id="datepicker">
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            <input type="text" class="form-control txtDueDate" id="txtDueDate" name="txtDueDate" readonly="readonly" value="@Model.DueDate.ToString("MM/dd/yyyy")">
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <label for="Amount">Booking Target</label>
                        <input type="text" name="Amount" class="form-control txtBookingTarget" id="txtBookingTarget" placeholder="0" value="@Model.Booking" />
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <label for="Amount">Fund Raising Target</label>
                        <input type="text" name="Amount" class="form-control txtDonationAmount" id="txtDonationAmount" placeholder="0.00" value="@Model.FundRaising" />
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <label for="Amount">GSB Target</label>
                        <input type="text" name="Amount" class="form-control txtGSBAmountTarget" id="txtGSBAmountTarget" placeholder="0.00" value="@Model.GSB" />
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <label for="Amount">Arrival Target</label>
                        <input type="text" name="Amount" class="form-control txtArrivalTargets" id="txtArrivalTargets" placeholder="0" value="@Model.Arrivals" />
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="btnEditEvent">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</form>


