
@{
    ViewBag.Title = "Tasks";
}

<div class="row">
    <div class="col-lg-12">
        <div id="page-header" class="clearfix">
            <div class="page-header">
                <h2>Tasks</h2>
            </div>
        </div>

        <div class="col-lg-8 col-sm-9 col-xs-12 p0">
            <div class="panel panel-default toggle panelMove panelClose panelRefresh btrr0 bbrr0">
                <div class="panel-heading">
                    <h4 class="panel-title">Task List</h4>
                </div>
                <div class="panel-body">
                    <table id="userTaskList" class="display">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Assign To</th>
                                <th>Due Date</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-sm-3 col-xs-12 p0" id="divTaskDetailContainer">
        </div>
    </div>
</div>

