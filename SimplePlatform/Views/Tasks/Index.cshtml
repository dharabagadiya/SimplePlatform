
@{
    ViewBag.Title = "Tasks";
}

<div class="row">
    <div class="col-lg-12">
        <div id="page-header" class="clearfix">
            <div class="page-header">
                <h2>Tasks</h2>
            </div>
            <div id="reportrange" class="pull-right" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; margin-top : 20px; ">
                <i class=" glyphicon glyphicon-calendar fa fa-calendar">
                </i>&nbsp;
                <span></span> <b class="caret"></b>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="col-lg-12 col-sm-12 col-xs-12 p0" id="divTaskList">
            <div class="panel panel-default toggle panelMove panelClose panelRefresh btrr0 bbrr0">
                <div class="panel-heading">
                    <h4 class="panel-title">Task List</h4>
                </div>
                <div class="panel-body">
                    <table id="userTaskList" class="display">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Title</th>
                                <th>Assign To</th>
                                <th>Due Date</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-sm-3 col-xs-12 p0" id="divTaskDetailContainer">
        </div>
    </div>
</div>

