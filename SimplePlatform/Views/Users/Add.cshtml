@model List<CustomAuthentication.Role>
@{ var offices = (List<DataModel.Modal.Office>)ViewData["Offices"]; }

<form action="@Url.Action("Add", "Users")" method="post">
    <div class="modal-dialog divUserModalDialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Add User</h4>
            </div>
            <div class="modal-body">
                <p class="bg-danger" id="divCommonMessage">User Email ID already used.</p>
                <div class="form-group">
                    <div class="col-sm-6">
                        <label for="FirstName">First Name</label>
                        <input type="text" name="firstName" class="form-control" id="txtUserFirstName" placeholder="First Name" />
                    </div>
                    <div class="col-sm-6">
                        <label for="LastName">Last Name</label>
                        <input type="text" class="form-control" name="lastName" id="txtUserLastName" placeholder="Last Name" />
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <label for="EmailAddress">Email Address</label>
                        <input type="email" class="form-control" id="txtUserEmailAddress" placeholder="Email Address" />
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <label for="SelectUserRole">Select User Role</label>
                        <select class="form-control" id="dwnUserRoles">
                            <option value="-1">Select User Role</option>
                            @foreach (var role in Model)
                            {
                                <option value="@role.RoleId">@role.RoleName</option>
                            }
                        </select>
                    </div>
                    <div class="clearfix"></div>
                </div>
                @if (offices != null && offices.Count > 0)
                {
                    <div class="form-group">
                        <div class="col-sm-12">
                            <label for="SelectUserRole">Select Office</label>
                            <select class="form-control" id="dwnOfficeList">
                                <option value="-1">Select Office</option>
                                @foreach (var office in offices)
                                {
                                    <option value="@office.OfficeId">@office.Name</option>
                                }
                            </select>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="btnAddUser">Add</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</form>
