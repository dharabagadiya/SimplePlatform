@model DataModel.Modal.Office
@{var users = (List<CustomAuthentication.User>)ViewData["Users"];  }
<form action="#" type="post">
    <input type="hidden" id="txtOfficeID" value="@Model.OfficeId" />
    <input type="hidden" id="txtUserID" value="@(Model.UsersDetail == null || Model.UsersDetail.Count <=0 ? 0: Model.UsersDetail.FirstOrDefault().UserId)" />
    <div class="modal-dialog divUserModalDialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Edit Office</h4>
            </div>
            <div class="modal-body">
                <p class="bg-danger" id="divCommonMessage">Office Name already exits.</p>
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" class="form-control" id="txtName" placeholder="Name" name="name" value="@Model.Name" />
                </div>
                <div class="form-group">
                    <label for="ContactNo">Contact</label>
                    <input type="text" class="form-control" id="txtContactNo" placeholder="Contact No" name="contactNo" value="@Model.ContactNo" />
                </div>
                <div class="form-group">
                    <label for="City">City</label>
                    <input type="text" class="form-control" id="txtCity" placeholder="City" name="city" value="@Model.City" />
                </div>
                <div class="form-group">
                    <label for="">File upload</label>
                    <input type="file" class="filestyle" name="image" data-buttontext="Find file" data-buttonname="btn-danger" data-iconname="fa fa-plus" id="myFile" tabindex="-1" style="position: absolute; clip: rect(0px 0px 0px 0px);">
                    <div class="bootstrap-filestyle input-group">
                        <input type="text" class="form-control " disabled="" id="txtFileName">
                        <span class="group-span-filestyle input-group-btn" tabindex="0">
                            <label for="myFile" class="btn btn-danger ">
                                <span class="filestyleicon fa fa-plus"></span> Find file
                            </label>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="SelectUserRole">Select User</label>
                    <select class="form-control" id="dwnUserID" name="ddlUser">
                        <option value="">Select User</option>
                        @foreach (var role in users)
                        {
                            <option value="@role.UserId">@role.FirstName @role.LastName (@role.Email)</option>
                        }
                    </select>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="btnSaveOffice">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</form>
