@model List<CustomAuthentication.User>
<form action="@Url.Action("Add", "Office")" type="post">
    <div class="modal-dialog divUserModalDialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Add Office</h4>
            </div>
            <div class="modal-body">
                <p class="bg-danger" id="divCommonMessage">Office Name already exits.</p>
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" class="form-control" id="txtName" placeholder="Name" name="name" />
                </div>
                <div class="form-group">
                    <label for="ContactNo">Contact</label>
                    <input type="text" class="form-control" id="txtContactNo" placeholder="Contact No" name="contactNo" />
                </div>
                <div class="form-group">
                    <label for="City">City</label>
                    <input type="text" class="form-control" id="txtCity" placeholder="City" name="city" />
                </div>
                <div class="form-group">
                    <label for="">Image upload</label>
                    <input type="file" class="filestyle" name="image" data-buttontext="Find file" data-buttonname="btn-danger" data-iconname="fa fa-plus" id="myFile" tabindex="-1" style="position: absolute; clip: rect(0px 0px 0px 0px);">
                    <div class="bootstrap-filestyle input-group">
                        <input type="text" class="form-control " disabled="" id="txtFileName">
                        <span class="group-span-filestyle input-group-btn" tabindex="0">
                            <label for="myFile" class="btn btn-danger ">
                                <span class="filestyleicon fa fa-plus"></span> Find file
                            </label>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="SelectUserRole">Select User</label>
                    <select class="form-control" id="dwnUserID" name="ddlUser" multiple>
                        <option value="">Select User</option>
                        @foreach (var role in Model)
                        {
                            <option value="@role.UserId">@role.FirstName @role.LastName  (@role.Email)</option>
                        }
                    </select>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="btnAddOffice">Add</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</form>