@model DataModel.Modal.Service

<form method="post">
    <input type="hidden" id="hdnServiceID" value="@Model.ServiceId" />
    <div class="modal-dialog divUserModalDialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Update Service</h4>
            </div>
            <div class="modal-body">
                <p class="bg-danger" id="divCommonMessage">Service already used.</p>
                <div class="form-group">
                    <label for="txtServiceName">Service Name</label>
                    <input type="text" name="txtServiceName" class="form-control" id="txtServiceName" placeholder="Service Name" value="@Model.ServiceName" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</form>

