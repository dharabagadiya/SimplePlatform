@model DataModel.Modal.Convention

@{
    ViewBag.Title = "Convention Detail";
}

<div class="row">
    <div class="col-lg-12">
        <div id="page-header" class="clearfix">
            <div class="page-header">
                <h2>@Model.Name</h2>
                <input type="hidden" id="txtConventionID" value="@Model.ConventionId" />
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="col-lg-6 col-md-8 col-sm-8 col-xs-8">
            <div class="panel panel-default toggle panelMove panelClose panelRefresh">
                <div class="panel-heading">
                    <h4 class="panel-title">Audience List</h4>
                </div>
                <div class="panel-body">
                    <table id="audienceList" class="display">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Name</th>
                                <th>Contact</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-default toggle panelMove panelClose panelRefresh">
                <div class="panel-heading">
                    <h4 class="panel-title">Event List</h4>
                </div>
                <div class="panel-body">
                    <table id="eventList" class="display">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
