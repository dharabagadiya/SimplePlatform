@model DataModel.Modal.Convention
@*@{ var users = (List<CustomAuthentication.User>)ViewData["Users"]; }*@

<form action="#" type="post" id="frmConventionEdit">
    <input type="hidden" id="hdnConventionID" value="@Model.ConventionId" />
    <div class="modal-dialog divUserModalDialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Edit Convention</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" class="form-control" id="txtName" placeholder="Name" name="name" value="@Model.Name" />
                </div>
                <div class="form-group">
                    <label for="Name">Duration</label>
                    <input type="text" class="form-control" id="datetimerange" name="datetimerange" value="@Model.StartDate.ToString("MM/dd/yyyy HH:mm") - @Model.EndDate.ToString("MM/dd/yyyy HH:mm")" />
                </div>
                @*<div class="form-group">
                    <label for="Name">City</label>
                    <input type="text" class="form-control" id="txtCity" placeholder="City" name="city" value="@Model.City" />
                </div>*@
                <div class="form-group">
                    <label for="txtDescription">Description</label>
                    <textarea class="form-control" rows="5" name="txtDescription" id="txtDescription">@Model.Description</textarea>
                </div>
                <div class="form-group">
                    <label for="">Image upload</label>
                    <input type="file" name="fileImage" class="filestyle" data-buttontext="Find file" data-buttonname="btn-danger" data-iconname="fa fa-plus" id="fuImage" tabindex="-1" style="position: absolute; clip: rect(0px 0px 0px 0px);">
                    <div class="bootstrap-filestyle input-group">
                        <input type="text" class="form-control " disabled="" id="fuImageName">
                        <span class="group-span-filestyle input-group-btn" tabindex="0">
                            <label for="fuImage" class="btn btn-danger ">
                                <span class="filestyleicon fa fa-plus"></span> Find file
                            </label>
                        </span>
                    </div>
                </div>
                @*<div class="form-group">
                    <label for="SelectOffice">Select Speaker</label>
                    <select class="form-control" id="dwnUserId" name="ddlUser">
                        @foreach (var user in users)
                        {
                            <option value="@user.UserId">@user.FirstName @user.LastName</option>
                        }
                    </select>
                </div>*@
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="btnEditEvent">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</form>


