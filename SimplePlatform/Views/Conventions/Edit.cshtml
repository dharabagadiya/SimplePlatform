@model DataModel.Modal.Convention
@{ var users = (List<CustomAuthentication.User>)ViewData["Users"]; }

<form action="#" type="post">
    <input type="hidden" id="hdnConventionID" value="@Model.ConventionId" />
    <div class="modal-dialog divUserModalDialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Edit Convention</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" class="form-control" id="txtName" placeholder="Name" name="name" value="@Model.Name" />
                </div>
                <div class="form-group">
                    <label for="dtDueDate">Due Date</label>
                    <div class="input-group input-icon input-daterange" id="datepicker">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                        <input type="text" class="form-control" id="txtDueDateStart" name="txtDueDateStart" readonly="readonly" value="@Model.StartDate">
                        <span class="input-group-addon">to</span>
                        <input type="text" class="form-control" id="txtDueDateEnd" name="txtDueDateEnd" readonly="readonly" value="@Model.EndDate">
                    </div>
                </div>
                <div class="form-group">
                    <label for="txtDescription">Description</label>
                    <textarea class="form-control" rows="5" name="txtDescription" id="txtDescription">@Model.Description</textarea>
                </div>
                <div class="form-group">
                    <label for="SelectOffice">Select Speaker</label>
                    <select class="form-control" id="dwnUserId">
                        @foreach (var user in users)
                        {
                            <option value="@user.UserId">@user.FirstName @user.LastName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="btnEditEvent">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</form>


